#! /usr/bin/env node

var server = new (require('../lib/node/websocket-server')),
    fsPath = require('path'),
    optimist = require('optimist'),
    configFile,
    argv;

argv = optimist.
        usage("js-test-agent --port [num] --configFile [./js-test-agent]").
        option('configFile', {
          alias: 'c',
          default: './.js-test-agent.js'
        }).
        option('port', {
          alias: 'p',
          default: 8789
        }).
        argv;

if(argv.help){
  optimist.showHelp();
  process.exit(0);
}

configFile = fsPath.normalize(argv.configFile);

if(configFile[0] !== '/'){
  configFile = fsPath.join(process.env['PWD'], configFile);
}

if(!fsPath.existsSync(configFile)){
  console.error("%s cannot be loaded - it does not exist", configFile);
  process.exit(1);
}

server.listen(argv.port);

console.log("Listening on port: %s", argv.port);
console.log("Loading config file '%s'", configFile);

server.expose(configFile);

